<div class="page-head-container">
    <h2 class="page-head"><?php echo $this->__('Catalog Advanced Search') ?></h2>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php if($this->getResultCount()): ?>
    <p>
        <?php echo $this->helper('catalogsearch')
            ->__('<strong>%d item(s)</strong> were found using the following search criteria', $this->getResultCount()); ?>
    </p>
<?php else: ?>
    <p class="note-msg">No items were found using the following search criteria. <a href="<?php echo $this->getFormUrl(); ?>"><?php echo $this->helper('catalogsearch')->__('Modify your search'); ?></a></p>
<?php endif; ?>

<?php $searchCriterias=$this->getSearchCriterias(); ?>
<div>
    <?php foreach (array('left', 'right') as $side): ?>
        <?php if(@$searchCriterias[$side]): ?>
            <ul>
                <?php foreach($searchCriterias[$side] as $criteria): ?>
                    <li><span><?php echo $this->htmlEscape($criteria['name']); ?>:</span> <?php echo $this->htmlEscape($criteria['value']); ?></li>
                <?php endforeach; ?>
            </ul>
        <?php endif; ?>
    <?php endforeach; ?>

    <?php if($this->getResultCount()): ?>
        <p class="note-msg">
            Don't see what you're looking for?
            <a href="<?php echo $this->getFormUrl(); ?>"><?php echo $this->helper('catalogsearch')->__('Modify your search'); ?></a>
        </p>
    <?php endif; ?>
</div>



<?php if($this->getResultCount()): ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
<?php $this->getSearchCriterias(); ?>