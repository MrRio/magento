<?php $parentItem = $this->getItem() ?>

<?php $items = $this->getChilds($parentItem) ?>
<?php $bundleOptions = $this->getBundleOptions() ?>

<?php $_prevOptionLabel = '' ?>

<?php foreach ($items as $_item): ?>

<?php if (empty($_option['value'])): ?>
    <?php $_option = array_shift($bundleOptions); ?>
<?php endif; ?>

<?php if($this->getItemOptions() || $parentItem->getDescription() || $this->helper('giftmessage/message')->getIsMessagesAvailable('order_item', $parentItem) && $parentItem->getGiftMessageId()): ?>
    <?php $_showlastRow = true ?>
<?php else: ?>
    <?php $_showlastRow = false ?>
<?php endif; ?>

<?php if ($_item->getOrderItem()->getParentItem()): ?>
    <?php if ($_prevOptionLabel != $_option['label']): ?>
    <tr>
        <td align="left" valign="top" style="padding:3px 24px"><strong><?php echo $_option['label'] ?></strong></td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
    </tr>
    <?php $_prevOptionLabel = $_option['label'] ?>
    <?php endif; ?>
<?php endif; ?>
<tr id="order-item-row-<?php echo $_item->getId() ?>">
    <?php if (!$_item->getOrderItem()->getParentItem()): ?>
    <td align="left" valign="top" style="padding:3px 9px">
        <?php echo $this->htmlEscape($_item->getName()) ?>
    </td>
    <?php else: ?>
    <td align="left" valign="top" style="padding:3px 24px">
        <?php if (is_array($_option['value'])): ?>
            <?php echo $this->getValueHtml(array_shift($_option['value']))?>
        <?php else: ?>
            &nbsp;
        <?php endif; ?>
    </td>
    <?php endif; ?>
    <td align="center" valign="top" style="padding:3px 9px"><?php echo $_item->getSku() ?></td>
    <td align="center" valign="top" style="padding:3px 9px">
        <?php if ($this->canShowPriceInfo($_item)): ?>
            <?php echo $_item->getQty()*1 ?>
        <?php else: ?>
            &nbsp;
        <?php endif; ?>
    </td>
    <td align="right" valign="top" style="padding:3px 9px">
        <?php if ($this->canShowPriceInfo($_item)): ?>
            <?php echo $this->getOrder()->formatPrice($_item->getRowTotal()) ?>
        <?php else: ?>
            &nbsp;
        <?php endif; ?>
    </td>
</tr>
<?php endforeach; ?>

<?php if ($_showlastRow): ?>
<tr>
    <td align="left" valign="top" style="padding:3px 9px">
        <?php if ($this->getItemOptions()): ?>
        <ul style="list-style:none;margin:0; padding:0;">
            <?php foreach ($this->getItemOptions() as $option): ?>
            <li><strong><?php echo $option['label'] ?>:</strong><br /><?php echo $option['value'] ?></li>
            <?php endforeach; ?>
        </ul>
        <?php endif; ?>
        <?php echo $_item->getDescription() ?>
    </td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
</tr>
<?php endif; ?>