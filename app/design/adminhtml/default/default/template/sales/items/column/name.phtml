<?php if ($_item = $this->getItem()): ?>
    <h5 class="title"><?php echo $_item->getName() ?></h5>
    <div class="nobr"><strong><?php echo $this->helper('sales')->__('SKU') ?>:</strong> <?php echo $_item->getSku() ?></div>
    <?php if ($this->getOrderOptions()): ?>
        <dl class="item-options">
        <?php foreach ($this->getOrderOptions() as $option): ?>
            <dt><?php echo $option['label'] ?></dt>
            <dd><?php echo $this->htmlEscape($option['value']); ?></dd>
        <?php endforeach; ?>
        </dl>
    <?php endif; ?>
    <?php echo $_item->getDescription() ?>
<?php endif; ?>