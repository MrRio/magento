<?php $_item = $this->getItem() ?>
<?php $items = $this->getChilds($_item); ?>
<?php $_count = count ($items) ?>
<?php $_index = 0 ?>
<?php $bundleOptions = $this->getBundleOptions($this->getItem()->getOrderItem()) ?>
<?php $_prevOptionLabel = '' ?>

<?php if($this->getOrderOptions() || $_item->getDescription()): ?>
    <?php $_showlastRow = true ?>
<?php else: ?>
    <?php $_showlastRow = false ?>
<?php endif; ?>

<?php foreach ($items as $_item): ?>
    <?php $this->setPriceDataObject($_item) ?>
    <?php if (empty($_option['value'])): ?>
        <?php $_option = array_shift($bundleOptions); ?>
    <?php endif; ?>
    <?php if ($_item->getOrderItem()->getParentItem()): ?>
        <?php if ($_prevOptionLabel != $_option['label']): ?>
        <tr>
            <td class="indent">
                <strong><?php echo $_option['label'] ?></strong>
            </td>
            <td>&nbsp;</td>
            <td class="last"></td>
        </tr>
        <?php $_prevOptionLabel = $_option['label'] ?>
        <?php endif; ?>
    <?php endif; ?>
    <tr class="<?php echo (++$_index==$_count && !$_showlastRow)?'border':'' ?>">
        <?php if (!$_item->getOrderItem()->getParentItem()): ?>
        <td>
            <div><?php echo $this->htmlEscape($_item->getName()) ?></div>
            <div class="nobr"><strong><?php echo $this->helper('sales')->__('SKU') ?>:</strong> <?php echo $_item->getSku() ?></div>
        </td>
        <?php else: ?>
        <td class="indent">
            <?php echo $this->getValueHtml(array_shift($_option['value']), $_item)?>
        </td>
        <?php endif; ?>
        <td>
            <?php if ($this->isShipmentSeparately($_item)): ?>
                <?php echo $this->getColumnHtml($_item, 'qty') ?>
            <?php endif; ?>
        </td>
        <td class="last">
            <?php if ($this->isShipmentSeparately($_item)): ?>
                <input type="text" class="input-text" name="shipment[items][<?php echo $_item->getOrderItemId() ?>]" value="<?php echo $_item->getQty()*1 ?>"/>
            <?php endif; ?>
        </td>
    </tr>
<?php endforeach; ?>
<?php if($_showlastRow): ?>
    <tr class="border">
        <td class="indent">
            <?php if ($this->getOrderOptions($_item->getOrderItem())): ?>
                <ul class="item-options-bundle">
                <?php foreach ($this->getOrderOptions($_item->getOrderItem()) as $option): ?>
                    <li><strong><?php echo $option['label'] ?>:</strong><br />
                        <?php echo $this->htmlEscape($option['value']); ?>
                    </li>
                <?php endforeach; ?>
                </ul>
            <?php endif; ?>
            <?php echo $_item->getDescription() ?>
        </td>
        <td>&nbsp;</td>
        <td class="last"></td>
    </tr>
<?php endif; ?>
