<config>
    <modules>
        <Mage_GiftRegistry>
            <version>0.1.0</version>
            <depends>
                <Mage_Catalog />
                <Mage_Sales />
                <Mage_Customer />
            </depends>
        </Mage_GiftRegistry>
    </modules>
    <global>
        <models>
            <giftregistry>
                <class>Mage_GiftRegistry_Model</class>
                <resourceModel>giftregistry_mysql4</resourceModel>
            </giftregistry>
            <giftregistry_mysql4>
                <class>Mage_GiftRegistry_Model_Mysql4</class>
                <entities>
                    <gift>
                        <table>giftregistry_gift</table>
                    </gift>
                </entities>
            </giftregistry_mysql4>
        </models>
        <helpers>
            <giftregistry>
                <class>Mage_GiftRegistry_Helper</class>
            </giftregistry>
        </helpers>
        <resources>
            <giftregistry_setup>
                <setup>
                    <module>Mage_GiftRegistry</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </giftregistry_setup>
            <giftregistry_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </giftregistry_write>
            <giftregistry_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </giftregistry_read>
        </resources>

        <events></events>
    </global>

    <frontend>
        <routers>
            <giftregistry>
                <use>standard</use>
                <args>
                    <module>Mage_GiftRegistry</module>
                    <frontName>giftregistry</frontName>
                </args>
            </giftregistry>
        </routers>
    </frontend>

    <adminhtml>
    </adminhtml>
</config>