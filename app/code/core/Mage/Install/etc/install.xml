<config>
    <wizard>
        <steps>
            <begin>
                <code>License Agreement</code>
                <controller>wizard</controller>
                <action>begin</action>
            </begin>
            <locale>
                <code>Localization</code>
                <controller>wizard</controller>
                <action>locale</action>
            </locale>
            <config>
                <code>Configuration</code>
                <controller>wizard</controller>
                <action>config</action>
            </config>
            <administrator>
                <code>Create Admin Account</code>
                <controller>wizard</controller>
                <action>administrator</action>
            </administrator>
            <end>
                <code>You're All Set!</code>
                <controller>wizard</controller>
                <action>end</action>
            </end>
        </steps>
    </wizard>
    <check>
        <filesystem>
            <writeable>
                <items>
                    <path>/app/etc</path>
                    <existence>1</existence>
                    <recursive>0</recursive>
                </items>
                <items>
                    <path>/var</path>
                    <existence>1</existence>
                    <recursive>1</recursive>
                </items>
                <items>
                    <path>/media</path>
                    <existence>1</existence>
                    <recursive>1</recursive>
                </items>
            </writeable>
        </filesystem>
        <php>
            <extensions>
                <spl/>
                <dom/>
                <simplexml/>
                <pdo_mysql/>
                <mcrypt/>
                <hash/>
                <curl/>
                <iconv/>
                <ctype/>
                <gd/>
            </extensions>
        </php>
        <mysql>
            <version>4.1.20</version>
        </mysql>
    </check>
</config>