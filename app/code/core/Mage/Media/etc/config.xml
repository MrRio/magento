<config>
    <modules>
        <Mage_Media>
            <version>0.7.0</version>
        </Mage_Media>
    </modules>
    <global>
        <models>
            <media>
                <class>Mage_Media_Model</class>
                <resourceModel>media_file</resourceModel>
            </media>
            <media_file>
                <class>Mage_Media_Model_File</class>
            </media_file>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Media>
                    <files>
                        <default>Mage_Media.csv</default>
                    </files>
                </Mage_Media>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <media>
                <use>standard</use>
                <args>
                    <module>Mage_Media</module>
                    <frontName>media</frontName>
                </args>
            </media>
        </routers>
        <translate>
            <modules>
                <Mage_Media>
                    <files>
                        <default>Mage_Media.csv</default>
                    </files>
                </Mage_Media>
            </modules>
        </translate>
     </frontend>
</config>