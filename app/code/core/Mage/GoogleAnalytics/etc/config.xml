<config>
    <modules>
        <Mage_GoogleAnalytics>
            <version>0.7.0</version>
        </Mage_GoogleAnalytics>
    </modules>

    <global>
        <models>
            <googleanalytics><class>Mage_GoogleAnalytics_Model</class></googleanalytics>
        </models>
        <blocks>
            <googleanalytics><class>Mage_GoogleAnalytics_Block</class></googleanalytics>
        </blocks>
        <helpers>
            <googleanalytics>
                <class>Mage_GoogleAnalytics_Helper</class>
            </googleanalytics>
        </helpers>
    </global>

    <frontend>
        <translate>
            <modules>
                <Mage_GoogleAnalytics>
                    <files>
                        <default>Mage_GoogleAnalytics.csv</default>
                    </files>
                </Mage_GoogleAnalytics>
            </modules>
        </translate>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <googleanalytics_order_success>
                        <type>singleton</type>
                        <class>googleanalytics/observer</class>
                        <method>order_success_page_view</method>
                    </googleanalytics_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
        <layout>
            <updates>
                <googleanalytics>
                    <file>googleanalytics.xml</file>
                </googleanalytics>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Mage_GoogleAnalytics>
                    <files>
                        <default>Mage_GoogleAnalytics.csv</default>
                    </files>
                </Mage_GoogleAnalytics>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <google>
                                            <title>Google API</title>
                                        </google>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>